<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="6dp"
    android:gravity="center"
    android:orientation="vertical"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp" >

            <ImageView
                android:id="@+id/category_icon_container"
                android:src="@drawable/chrono_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_marginTop="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/event_list_item_date"
                android:text="Jan 31"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp"
                android:textColor="@color/title_list_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/event_list_item_time"
                android:text="9:00 AM"
                android:textColor="@color/drawer_select"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/event_list_item_title"
                android:textColor="@color/title_list_black"
                android:fontFamily="sans-serif-medium"
                android:text="Title of Event"
                android:textSize="15sp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/event_list_item_details"
                android:text="This is some placeholder"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/drawer_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>